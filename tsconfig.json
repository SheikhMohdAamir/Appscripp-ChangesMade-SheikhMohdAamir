{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/context.js", "src/components/Products.js", "src/components/Footer.js", "src/components/Hero.js", "src/components/MainHeader.js", "src/components/MobileNavbar.js", "src/components/Navbar.js", "src/components/ProductCard.js", "src/components/reducer.js", "src/components/Slide.js", "src/components/Testimonial.js"],
  "exclude": ["node_modules"]
}
